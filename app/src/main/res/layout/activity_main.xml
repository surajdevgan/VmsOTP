<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_gradient"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:id="@+id/logoimg"
        android:layout_gravity="center"
        android:background="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FAC740"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="italic"
        android:id="@+id/namenn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FAC740"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/wname"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="250dp"
        app:riv_border_width="4dip"
        app:riv_border_color="#FAC740"
        app:riv_mutate_background="true"
        android:visibility="gone"
        android:id="@+id/imgview"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:riv_corner_radius="30dip"
        android:layout_height="250dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txtResult"
        />

    <EditText
        android:layout_width="300dp"
        android:hint="Enter Service ID Here"
        android:textColorHint="#FAC740"
        android:textStyle="bold"
        android:maxLength="12"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#FAC740"
        android:inputType="textCapCharacters"
        android:id="@+id/editser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#FAC740"
        android:id="@+id/tvs"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="OR"
        />

    <Button
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:textColor="#10161D"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FAC740"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:visibility="gone"
        android:onClick="generate"
        android:background="@drawable/button"
        android:text="Generate Service OTP"
        android:id="@+id/scanservice"
        />



    <Button
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="45dp"

        android:textColor="#FAC740"
        android:onClick="btnScan"
        android:background="@drawable/button"
        android:text="Scan &amp; Share"
        android:id="@+id/scan"
        />



    <Button
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:onClick="SelectImg"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:textColor="#FAC740"
        android:id="@+id/slectimg"
        android:text="Choose code from Gallery"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/remainpc"
        android:textColor="#FAC740"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:onClick="GeneratePrint"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:textColor="#10161D"
            android:background="@drawable/pntbtn"
            android:backgroundTint="#FAC740"
            android:id="@+id/gntprnt"

            android:layout_alignParentEnd="true"
            android:text="Enter Print Id Here"
            />
    </RelativeLayout>




</LinearLayout>
