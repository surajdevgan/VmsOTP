<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent">
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/printid"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:maxLength="12"
        android:textAllCaps="true"
        android:background="#11000000"
        android:inputType="textCapCharacters"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_gravity="center"
        android:hint="Enter Print Count ID"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/geditText3"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:maxLength="4"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_gravity="center"
        android:hint="Enter Print Count"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="Client :"
            />
        <EditText
            android:id="@+id/gtextName"
            android:layout_alignParentLeft="true"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:background="#11000000"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:hint="Name"
            android:inputType="textPersonName"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Ver :"
            />
        <EditText
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"

            android:maxLength="1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/gtextVersion"
            />
    </RelativeLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/typespinner" />

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/ggenerate"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Generate"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/gcancel"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cancel"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>